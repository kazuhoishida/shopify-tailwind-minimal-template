<a href="{{ article.url }}" class="hover:opacity-50 transition-all">
  {% if article.image != nil %}
  <div class="aspect-square mb-4">
    <img src="{{ article.image.src | image_url: width: 800, height: 800 }}" class="w-full h-full object-cover" loading="lazy">
  </div>
  {% endif %}
  <div>
    <time class="col-span-1 text-link-gray text-12" datetime="{{ article.published_at | date: "%b %d, %y" }}">{{ article.published_at | date: "%Y.%m.%d" }}</time>
    <span class="col-span-1 text-link-gray ml-4 text-12">
      {{ article.tags | first }}
    </span>
    <p class="lineClamp2 col-span-3  block my-2 text-14 font-bold text-base-text">{{ article.title }}</p>
    {% if article.excerpt != '' %}
      <p>{{ article.excerpt }}</p>
    {% else %}
      <p>{{ article.content | strip_html | truncate: 50 }}</p>
    {% endif %}
  </div>
</a>