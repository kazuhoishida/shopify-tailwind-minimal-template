<div class="product__accordion accordion" {{ attr }}>
  <details id="{{ detailId }}" open>
    <summary>
      <div class="summary__title">
        {% if icon %}
          {% render 'icon-accordion', icon: icon %}
        {% endif %}
        <h2 class="h4 accordion__title">
          {{ heading | default: block.settings.page.title }}
        </h2>
      </div>
      {% render 'icon-caret' %}
    </summary>
    <div class="accordion__content rte" id="{{ accordionId }}">
      {{ content }}
      {{ pageContent }}
    </div>
  </details>
</div>
