<script id="inline-json-block-product-dimensions" type="application/json">
{% capture content1 %}
  {{ product.metafields['dimensions']['table'] | strip_newlines }}
{% endcapture %}
{% capture content1 %}{{ content1 | strip_newlines | replace: '"', '\"' | replace: '	', '' | strip }}{% endcapture %}
{% capture content2 %}
  {% if product.metafields.dimensions.pattern.value %}
    {% render 'responsive-img', media: product.metafields.dimensions.pattern.value %}
  {% endif %}
{% endcapture %}
{% capture content2 %}{{ content2 | strip_newlines | replace: '"', '\"' | strip }}{% endcapture %}
{% capture content %}
  {% if content1 != '' and content2 != '' %}
    "{{ content1 }}","{{ content2 }}"
  {% elsif content1 != '' %}
    "{{ content1 }}"
  {% elsif content2 != '' %}
    "{{ content2 }}"
  {% endif %}
{% endcapture %}
{% raw %}{{% endraw %}
  "id": "{{ block.id }}",
  "heading": "{{ block.settings.heading }}",
  "content": {% raw %}[{% endraw %}{{ content | strip_newlines | strip }}{% raw %}]{% endraw %}
{% raw %}}{% endraw %}
</script>

{% comment %} {% assign detailId = 'Details-' | append: block.id | append: '-' | append: section.id %}
{% assign accordionId = 'ProductAccordion-' | append: block.id | append: '-' | append: section.id %}
{% capture content %}
  {% render 'responsive-img', media: product.metafields.dimensions.table.value %}
  {% render 'responsive-img', media: product.metafields.dimensions.pattern.value %}
{% endcapture %}
{% render 'collapsible_tab',
  attr: block.shopify_attributes,
  detailId: detailId,
  icon: block.settings.icon,
  heading: block.settings.heading,
  accordionId: accordionId,
  content: content
%} {% endcomment %}