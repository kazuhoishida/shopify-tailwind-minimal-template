{%- style -%}
  #main-cart-items {
    --sec-pt: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    --sec-pb: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --sec-pt-s: {{ section.settings.padding_top }}px;
    --sec-pb-s: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

<div id="main-cart-items">
  <cart-items class="pt-[var(--sec-pt)] pb-[var(--sec-pb)] md:pt-[var(--sec-pt-s)] md:pb-[var(--sec-pb-s)] w-9/10 mx-auto">
    <div class="title-wrapper-with-link">
      <h1 class="text-base-text text-22 ">{{ 'sections.cart.title' | t }}</h1>
      <a href="{{ routes.all_products_collection_url }}" class="underlined-link">{{ 'general.continue_shopping' | t }}</a>
    </div>

    {% render 'main-cart-warnings' %}

    <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
      <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
        <div class="js-contents">
          {%- if cart != empty -%}
            <table class="cart-items">
              <tbody>
                {%- for item in cart.items -%}
                  <tr class="cart-item divider" id="CartItem-{{ item.index | plus: 1 }}">
                    {% render 'main-cart-media', item: item %}
                    {% render 'main-cart-total-price-sp', item: item %}
                    {% render 'main-cart-details', item: item %}
                    {% render 'main-cart-quantity', item: item %}
                    {% render 'main-cart-total-price-pc', item: item %}
                    {% render 'main-cart-remove', item: item %}
                  </tr>
                {%- endfor -%}
              </tbody>
            </table>
          {%- endif -%}
        </div>
      </div>

      <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
      <p class="visually-hidden" id="shopping-cart-line-item-status" aria-live="polite" aria-hidden="true" role="status">{{ 'accessibility.loading' | t }}</p>
    </form>
  </cart-items>
</div>

{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.main-cart-items.settings.show_vendor.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
