<script id="inline-json-section" type="application/json">
{% raw %}{{% endraw %}
"id": "{{ section.id }}"
{% raw %}}{% endraw %}
</script>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<section class="page-width section-{{ section.id }}-padding">
  <div class="grid grid-cols-2 product product--{{ section.settings.media_size }} product--{{ section.settings.gallery_layout }}">
    <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}">
        
        {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when '@app' -%}
            {% render block %}
          {%- when 'text' -%}
          {%- when 'title' -%}
          {%- when 'price' -%}
            {%- render 'block-main-product-price', section: section, block: block, product: product -%}
          {%- when 'tags' -%}
          {%- when 'description' -%}
          {%- when 'custom_liquid' -%}
          {%- when 'collapsible_tab' -%}
          {%- when 'collapsible_tab_detail' -%}
            {%- render 'block-main-product-detail', section: section, block: block, product: product -%}
          {%- when 'collapsible_dimensions' -%}
            {%- render 'block-main-product-dimensions', section: section, block: block, product: product -%}
          {%- when 'collapsible_quality' -%}
            {%- render 'block-main-product-quality', section: section, block: block, product: product -%}
          {%- when 'policy_cancellation' -%}
          {%- when 'buy_buttons' -%}
            <script src="{{ 'pickup-availability.js' | asset_url }}" defer="defer"></script>
          {%- when 'rating' -%}
            {%- render 'block-main-product-rating', section: section, block: block, product: product -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  {%- render 'block-main-product-new-items', section: section, block: block, product: product -%}
</section>

{%- render 'block-main-product-modal-js', section: section, block: block, product: product -%}
{%- render 'block-main-product-json', section: section, block: block, product: product -%}

