<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  #main-page {
    --sec-pt: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    --sec-pb: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --sec-pt-s: {{ section.settings.padding_top }}px;
    --sec-pb-s: {{ section.settings.padding_bottom }}px;
  }

  .rte {
    opacity: 0;
  }
{%- endstyle -%}

<div id="main-page" class="bg-base-bg1">
  <div class="w-page-mobile mx-auto pt-[var(--sec-pt)] pb-[var(--sec-pb)] md:pt-[var(--sec-pt-s)] md:pb-[var(--sec-pb-s)]">
    {% render 'utility-page-title', text: page.title %}
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>

<script>
// 最初にformbuilderのショートコードが一瞬見えてしまうため、フォームが読み込まれてからページを表示する
const container = document.querySelector('.rte')

const formFadeIn = () => {
  const form = document.querySelector('.globo-formbuilder')

  if(form != null) {
    container.style.opacity = 1
    clearInterval(intervalID)
  }
}

const intervalID = setInterval(formFadeIn, 300)
</script>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
