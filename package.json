{
  "name": "shopify-liquid-tailwind-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "run-p dev theme:serve",
    "dev": "run-p dev:*",
    "dev:css": "postcss src/css/**/[^_]*.css --watch --dir assets --config postcss.config.cjs",
    "dev:js": "node ./build.cjs",
    "build": "run-p build:*",
    "build:css": "NODE_ENV=PRODUCTION postcss src/css/**/[^_]*.css --no-map --dir assets --config postcss.config.cjs",
    "build:js": "NODE_ENV=PRODUCTION node ./build.cjs",
    "lint": "npm-run-all -p eslint checkTypes stylelint theme:check",
    "lint:fix": "npm-run-all eslint:fix stylelint:fix format",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --config .setting/.eslintrc.json",
    "eslint:fix": "eslint --fix 'src/**/*.{js,ts}' --config .setting/.eslintrc.json",
    "theme:serve": "shopify theme dev",
    "theme:check": "shopify theme check -a",
    "cheat": "opener https://www.shopify.com/partners/shopify-cheat-sheet"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.23",
    "glob": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.4.1",
    "postcss-progress": "^1.1.1",
    "tailwindcss": "^0.0.0-insiders.50024e4"
  },
  "dependencies": {
    "@types/eslint": "^8.21.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "cssnano": "^5.1.7",
    "eslint": "^8.33.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
