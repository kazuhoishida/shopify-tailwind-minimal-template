{
  "name": "shopify-liquid-tailwind-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:css": "postcss src/css/**/[^_]*.css --watch --dir assets --config postcss.config.js",
    "dev:js": "node ./build.js",
    "build": "run-p build:*",
    "build:css": "NODE_ENV=PRODUCTION postcss src/css/**/[^_]*.css --no-map --dir assets --config postcss.config.js",
    "build:js": "NODE_ENV=PRODUCTION node ./build.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.23",
    "glob": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.4.1",
    "postcss-progress": "^1.1.1",
    "tailwindcss": "^0.0.0-insiders.50024e4"
  },
  "dependencies": {
    "cssnano": "^5.1.7"
  }
}
