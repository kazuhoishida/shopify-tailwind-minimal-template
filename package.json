{
  "name": "shopify-liquid-tailwind-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "run-p dev theme:serve",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -i ./src/css/tailwind.css -o ./assets/tailwind.css -w",
    "dev:js": "node ./build.mjs",
    "build": "run-p build:*",
    "build:css": "NODE_ENV=PRODUCTION postcss src/css/**/[^_]*.css --no-map --dir assets --config postcss.config.cjs",
    "build:js": "NODE_ENV=PRODUCTION node ./build.mjs",
    "lint": "npm-run-all -p eslint checkTypes theme:check",
    "lint:fix": "npm-run-all eslint:fix format",
    "format": "npm-run-all format:*",
    "format:js": "prettier --write 'src/**/*.{js,jsx,ts,tsx}' --config .setting/.prettierrc",
    "format:liquid": "prettier --write '**/*.liquid' --config .setting/.prettierrc",
    "eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --config .setting/.eslintrc.json",
    "eslint:fix": "eslint --fix 'src/**/*.{js,ts}' --config .setting/.eslintrc.json",
    "checkTypes": "tsc --noEmit",
    "theme:serve": "source .env && shopify theme dev --store=$SHOPIFY_STORE_URL",
    "theme:check": "shopify theme check",
    "theme:logout": "shopify auth logout",
    "cheat": "opener https://www.shopify.com/partners/shopify-cheat-sheet"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.17.5",
    "glob": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^8.0.1",
    "postcss-progress": "^1.1.1",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "@shopify/prettier-plugin-liquid": "^1.0.6",
    "@types/eslint": "^8.21.0",
    "@types/opener": "^1.4.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "cssnano": "^5.1.14",
    "eslint": "^8.33.0",
    "opener": "^1.5.2",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
